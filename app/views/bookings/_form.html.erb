<div class="booking-form-error">
  <%= form_for([@ride, @booking]) do |f| %>
    <% if @booking.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being made:</h3>

        <ul>
        <% @booking.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
</div>
<div class="booking-form-style">
  <div class="field">
    <%= f.label :seats %>
    <%= f.number_field :seats, min: 1 %>
  </div>
  <div id="booking-div-button" class="actions">
    <%= f.submit class: "button_style" %>
  </div>
  <% end %>
</div>
